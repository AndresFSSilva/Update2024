@model IEnumerable<SalesWebMvc.Models.Seller>

@{
    ViewData["Title"] = "Sellers";
}

<h1>@ViewData["Title"]</h1>

<p class="link-success">
    <a asp-action="Create" class="btn btn-default">Create New</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="table table-striped table-hover">
            <th class="">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th class="">
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th class="">
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th class=""></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table table-striped table-hover">
                <td class="">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="">
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td class="">
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td class="">
                    @Html.DisplayFor(modelItem => item.BaseSalary)
                </td>
                <td class="">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-default">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-default">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-default, link-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>